<div class="container">
  <div class="row my-5">
    <div class="col-3 mx-5">
      <h3 class="bg-light px-4 text-center">商品一覧</h3>
    </div>
    <div class="col-7">
      <%= link_to new_admin_item_path, class: "text-dark" do %>
        <i class="fas fa-plus-circle float-right fa-3x"></i>
      <% end %>
    </div>
  </div>
  <div class="row">
    <table class="table table-borderless">
      <thead class="thead-light">
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td>
            <%= link_to admin_item_path(item.id), class: "text-dark" do %>
            <%= item.name %>
            <% end %>
          </td>
          <td><%= item.price.to_s(:delimited) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>