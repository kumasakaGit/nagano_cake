<div class="container">
  <div class="row my-5">
    <div class="mx-5">
      <h3 class="bg-light px-4 text-center">商品詳細</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-4">
      <%= image_tag @item.image, size: "250x200" %>
    </div>
    <div class="col-8">
      <table class="table table-borderless">
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>
            税込価格<br>
            (税抜価格)
          </td>
          <td>
            <%= @item.with_tax_price.to_s(:delimited) %>
            (<%= @item.price.to_s(:delimited) %>)円
          </td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <%= link_to "編集する", edit_admin_item_path, :class => "btn btn-success mx-auto px-5" %>
  </div>
</div>