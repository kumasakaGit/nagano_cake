<div class="container">
  <div class="row my-5">
    <div class="col-5 mx-5">
      <h3 class="bg-light px-4 text-center">
        <%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細
      </h3>
    </div>
  </div>
  <div class="row">
    <div class="mx-5">
      <table class="table table-borderless">
        <tr>
          <td>会員ID</td>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <td>氏名</td>
          <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= @customer.postal_code %></td>
        </tr><tr>
          <td>住所</td>
          <td><%= @customer.address %></td>
          <td colspan="2"></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <td class="text-success"><%= @customer.is_deleted_i18n %></td>
        </tr>
        <tr>
          <td colspan="1"></td>
          <td><%= link_to "編集する", edit_admin_customer_path, :class => "btn btn-success" %></td>
          <td><%= link_to "注文履歴一覧を見る", admin_root_path, :class => "btn btn-primary" %></td>
        </tr>
      </table>
    </div>
  </div>
</div>