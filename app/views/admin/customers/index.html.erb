<div class="container">
  <div class="row my-5">
    <div class="col-3 mx-5">
      <h3 class="bg-light px-4 text-center">会員一覧</h3>
    </div>
  </div>
  <div class="row">
    <div class="mx-auto">
      <table class="table table-borderless">
        <thead class="thead-light">
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td>
              <%= link_to admin_customer_path(customer.id), class: "text-dark" do %>
              <%= customer.last_name + customer.first_name %>
              <% end %>
            </td>
            <td><%= customer.email %></td>
            <% if customer.is_deleted == "active" %>
              <td class="text-success"><%= customer.is_deleted_i18n %></td>
            <% else %>
              <td class="text-secondary"><%= customer.is_deleted_i18n %></td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
