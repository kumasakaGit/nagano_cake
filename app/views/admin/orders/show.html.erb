<h3>注文履歴詳細</h3>
<table>
  <tr>
    <th>購入者</th>
    <td><%= @order.name %></td>
  </tr>
  <tr>
    <th>注文日</th>
    <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
  </tr>
  <tr>
    <th>配送先</th>
    <td>〒<%= @order.postal_code + @order.shopping_address + @order.name %></td>
  </tr>
  <tr>
    <th>支払方法</th>
    <td><%= @order.payment_methods_i18n %></td>
  </tr>
</table>
<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% @order.order_items.each do |order_item| %>
    <tr>
      <td><%= order_item.item.name %></td>
      <td><%= order_item.price %></td>
      <td><%= order_item.amount %></td>
      <td><%= (order_item.price * order_item.amount).to_s(:delimited) %></td>
    </tr>
    <% end %>
  </tbody>
</table>