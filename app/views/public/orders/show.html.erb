<h3>注文履歴詳細</h3>
<h5>注文情報</h5>
<table>
  <tr>
    <td>注文日</td>
    <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
  </tr>
  <tr>
    <td>配送先</td>
    <td>
      〒<%= @order.postal_code %>
      <%= @order.shopping_address %>
      <%= @order.name %>
    </td>
  </tr>
  <tr>
    <td>支払方法</td>
    <td><%= @order.payment_methods_i18n %></td>
  </tr>
</table>
<h5>注文内容</h5>
<table>
  <thead>
    <tr>
      <td>商品</td>
      <td>単価(税込)</td>
      <td>個数</td>
      <td>小計</td>
    </tr>
  </thead>
  <tbody>
    <% @total = 0 %>
    <% @order.order_items.each do |order_item| %>
    <tr>
      <td><%= order_item.item.name %></td>
      <td><%= order_item.price.to_s(:delimited) %></td>
      <td><%= order_item.amount %></td>
      <td><%= (order_item.price * order_item.amount).to_s(:delimited) %></td>
    </tr>
    <% @total += order_item.price * order_item.amount %>
    <% end %>
  </tbody>
</table>
<h5>請求情報</h5>
<table>
  <tr>
    <td>商品合計</td>
    <td><%= @total.to_s(:delimited) %></td>
  </tr>
  <tr>
    <td>配送料</td>
    <td><%= @order.shopping_charge %></td>
  </tr>
  <tr>
    <th>ご請求額</th>
    <td><%= @order.billing_amount.to_s(:delimited) %></td>
  </tr>
</table>