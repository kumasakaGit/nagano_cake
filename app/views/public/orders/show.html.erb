<div class="container">
  <div class="row my-4">
    <div class="col-5 mr-auto">
      <h3 class="bg-light text-center">注文履歴詳細</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-8">
      <h5>注文情報</h5>
      <table class="table" border="2" bordercolor="#000000">
        <tr>
          <td class="table-secondary">注文日</td>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <td class="table-secondary">配送先</td>
          <td>
            〒<%= @order.postal_code %><br>
            <%= @order.shopping_address %><br>
            <%= @order.name %>
          </td>
        </tr>
        <tr>
          <td class="table-secondary">支払方法</td>
          <td><%= @order.payment_methods_i18n %></td>
        </tr>
      </table>
    </div>
    <div class="col-4">
      <h5>請求情報</h5>
      <table class="table" border="2" bordercolor="#000000">
        <tr>
          <td  class="table-secondary">商品合計</td>
          <td><%= @total.to_s(:delimited) %></td>
        </tr>
        <tr>
          <td  class="table-secondary">配送料</td>
          <td><%= @order.shopping_charge %></td>
        </tr>
        <tr>
          <th  class="table-secondary">ご請求額</th>
          <td><%= @order.billing_amount.to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
  </div>
<div class="row">
  <div class="col-10">
    <h5>注文内容</h5>
    <table class="table" border="2" bordercolor="#000000">
      <thead>
        <tr>
          <td class="table-secondary">商品</td>
          <td class="table-secondary">単価(税込)</td>
          <td class="table-secondary">個数</td>
          <td class="table-secondary">小計</td>
        </tr>
      </thead>
      <tbody>
        <% @order.order_items.each do |order_item| %>
        <tr>
          <td><%= order_item.item.name %></td>
          <td><%= order_item.price.to_s(:delimited) %></td>
          <td><%= order_item.amount %></td>
          <td><%= order_item.subtotal.to_s(:delimited) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

