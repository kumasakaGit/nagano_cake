<h3>注文履歴一覧</h3>
<table>
  <thead>
    <tr>
      <td>注文日</td>
      <td>配送先</td>
      <td>注文商品</td>
      <td>支払金額</td>
      <td>注文詳細</td>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
      <td>
        〒<%= order.postal_code %>
        <%= order.shopping_address %>
        <%= order.name %>
      </td>
      <td><%= order.name %></td>
      <td><%= order.billing_amount.to_s(:delimited) %></td>
      <td><%= link_to "表示する", public_order_path(order.id) %></td>
    </tr>
    <% end %>
  </tbody>
</table>