<h3>ショッピングカート</h3>
<%= link_to "カートを空にする", all_destroy_public_cart_items_path, method: :delete,class: "btn btn-danger btn-sm" %>
<table>
  <thead>
    <tr>
      <td>商品名</td>
      <td>単価(税込)</td>
      <td>数量</td>
      <td>小計</td>
      <td colspan="1"></td>
    </tr>
  </thead>
  <tbody>
    <% @total = 0 %>
    <% if current_customer.cart_items.present? %>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <th>
        <% if cart_item.item.image.attached? %>
          <%= image_tag cart_item.item.image, size: "100x75" %>
        <% else %>
          <%= image_tag 'no_image', size: "100x75" %>
        <% end %>
        <%= cart_item.item.name %>
      </th>
      <th><%= cart_item.item.with_tax_price %></th>
      <th>
        <%= form_with model: cart_item, url: public_cart_item_path(cart_item.id), local: true do |f| %>
        <%= f.select :amount, *[1..10] %>
        <%= f.submit "変更" , class: "btn btn-success" %>
        <% end %>
      </th>
      <th><%= cart_item.subtotal %></th>
      <th><%= link_to "削除する", public_cart_item_path(cart_item.id, cart_item) ,  method: :delete , "data-confirm" => "商品を削除しますか？" , class: "btn btn-danger"%></th>
    </tr>
    <% @total += cart_item.subtotal %>
    <% end %>
    <% end %>
  </tbody>
</table>
<%= link_to "買い物を続ける", public_items_path, :class => "btn btn-primary" %>
<table>
  <tr>
    <td>合計金額</td>
    <td><%= @total %></td>
  </tr>
</table>

<%= link_to "注文する", new_public_order_path, :class => "btn btn-success" %>