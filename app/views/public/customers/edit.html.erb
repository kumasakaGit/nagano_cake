<div class="container">
  <div class="row my-5">
    <div class="col-4 mx-3">
      <h3 class="bg-light text-center">会員情報編集</h3>
    </div>
  </div>
  <%= form_with model: @customer, url: public_customers_path, local: true do |f| %>
  <div class="row">
  <table>
      <tr>
        <td><%= f.label :"氏名" %></td>
        <td><%= f.text_field :last_name %></td>
        <td><%= f.text_field :first_name %></td>
      </tr>
      <tr>
        <td><%= f.label :"フリガナ" %></td>
        <td><%= f.text_field :last_name_kana %></td>
        <td><%= f.text_field :first_name_kana %></td>
      </tr>
      <tr>
        <td><%= f.label :"郵便番号" %></td>
        <td><%= f.text_field :postal_code %></td>
      </tr>
      <tr>
        <td><%= f.label :"住所" %></td>
        <td colspan="3"><%= f.text_field :address, size: "50x45" %></td>
      </tr>
      <tr>
        <td><%= f.label :"電話番号" %></td>
        <td><%= f.text_field :telephone_number %></td>
      </tr>
      <tr>
        <td><%= f.label :"メールアドレス" %></td>
        <td><%= f.email_field :email, autocomplete: "email" %></td>
      </tr>
      <tr>
        <td colspan="1"></td>
        <td><%= f.submit "編集内容を保存", class: "btn btn-success px-5" %></td>
        <td colspan="1"></td>
        <td><%= link_to "退会する", public_customers_unsubscribe_path, :class => "btn btn-danger mx-auto" %></td>
      </tr>
    </table>
  </div>
</div>

<% end %>
