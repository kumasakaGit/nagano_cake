<h3>会員情報編集</h3>
<%= form_with model: @customer, url: public_customers_path, local: true do |f| %>

  <div class="d-flex">
    <label>名前</label>
      <%= f.text_field :last_name %>
      <%= f.text_field :first_name %>
  </div>

  <div class="d-flex">
    <label>フリガナ</label>
      <%= f.text_field :last_name_kana %>
      <%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <%= f.label :"郵便番号(ハイフンなし)" %>
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    <%= f.label :"住所" %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :"電話番号(ハイフンなし)" %>
    <%= f.text_field :telephone_number %>
  </div>

  <div class="field">
    <%= f.label :"メールアドレス" %>
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="actions d-flex mx-auto">
    <%= f.submit "編集内容を保存", :class => "btn btn-success mx-auto px-5" %>
  <%= link_to "退会する", public_customers_unsubscribe_path, :class => "btn btn-danger mx-auto" %>
  </div>

<% end %>
