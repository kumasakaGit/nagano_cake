<div class="container">
  <div class="row my-5">
    <div class="col-lg-8 m-3">
      <h3>マイページ</h3>
      <div class="d-flex mb-3">
        <h4 class="mr-5"><strong>登録情報</strong></h4>
        <%= link_to "編集する", public_customers_edit_path, :class => "btn btn-primary px-4" %>
      </div>

      <table border="1" style="border-collapse: collapse" width="90%">
        <tr>
          <th width="30%">氏名</th>
          <td width="60%"><%= @customer.last_name %>　<%= @customer.first_name %></td>
        </tr>
        <tr>
          <th>カナ</th>
          <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </table>

      <div class="d-flex mt-3 mb-2">
        <h4 class="mr-5"><strong>配送先</strong></h4>
        <%= link_to "一覧を見る", public_customers_edit_path, :class => "btn btn-primary ml-4 px-4" %>
      </div>
      <div class="d-flex mb-5">
        <h4 class="mr-5"><strong>注文履歴</strong></h4>
        <%= link_to "一覧を見る", public_customers_edit_path, :class => "btn btn-primary px-4" %>
      </div>
    </div>
  </div>
</div>