<div class="container">
  <div class="row my-5">
    <div class="col-3 mx-5">
      <h3 class="bg-light px-4">マイページ</h3>
    </div>
  </div>
  <div class="row mb-5">
    <div class="col-8">
      <div class="d-flex mb-3">
        <h4 class="mr-5"><strong>登録情報</strong></h4>
        <%= link_to "編集する", public_customers_edit_path, :class => "btn btn-primary px-4" %>
      </div>

      <table class="table" border="1" bordercolor="#000000">
        <tr>
          <th class="table-secondary">氏名</th>
          <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
        </tr>
        <tr>
          <th class="table-secondary">カナ</th>
          <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th class="table-secondary">郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th class="table-secondary">住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th class="table-secondary">電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th class="table-secondary">メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </table>

      <div class="d-flex mb-5">
        <h4 class="mr-5"><strong>注文履歴</strong></h4>
        <%= link_to "一覧を見る", public_orders_path, :class => "btn btn-primary px-4" %>
      </div>
    </div>
  </div>
</div>